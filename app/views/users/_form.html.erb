<%= simple_form_for resource, as: resource_name,
                              url: registration_path(resource_name),
                              html: { class: 'form-horizontal' } do |f| %>

  <%= hidden_field_tag :type, user.type %>

  <%= f.input :name %>

  <%= f.input :email %>

  <% if user.errors %>
  <%= f.input :password, hint: false %>
  <% else %>
  <%= f.input :password %>
  <% end %>

  <%= f.input :password_confirmation %>

  <%= f.input :description,
              label: t("users.desc_label_#{user.type.to_s.underscore}") %>

  <% if user.type == 'Host' %>
  <%= f.input :work_description, label: t('users.work_desc_label') %>
  <% end %>

  <%= f.association :work_types,
                    label: t("users.work_types_label_#{user.type.to_s.underscore}"),
                    as: :check_boxes %>

  <%= f.button :submit, class: "signup-button" %>

<% end %>
