<% provide :title, @user.name %>

<div class="row">

  <aside class="span3">
    <div class="user-gravatar">
      <%= gravatar_for @user, size: 220 %>
      <!-- TODO: activate fancy zoom -->
    </div>

    <ul class="linklist" id="profile_linklist">
      <% unless @no_feedback_link %>
      <li>
        <%= link_to t('.leave_feedback'), new_user_feedback_path(@user) %>
      </li>
      <% end %>
      <li><%= link_to t('.edit_profile'), '#' %></li>
      <% if @user == current_user %>
      <li>
        <%= link_to t('offers.new.link'), new_user_offer_path(current_user) %>
      </li>
      <% end %>
      <li id="sub3" class="space">
        <a href=""><span></span></a></li>
      <li id="sub6" class="">
      <li><%= link_to t('.contact_user'), '#' %></li>
    </ul>
  </aside>

  <div class="span8">

    <div id="profile-header" class="row">
      <% if false %>
      <div id="profile-location">
        <%= image_tag "http://maps.google.com/maps/api/staticmap?center=#{@user.latitude}%2C#{@user.longitude}&size=300x200&sensor=false&zoom=8", alt: "map" %>
      </div>
      <% end %>

      <h1 id="username" class="span8">
        <strong><%= @user.name %></strong>
      </h1>

      <div class="span8">
        <div class="row">
          <div class="span2 quickinfo">
            <%= image_tag "#{@user.type.underscore}_24.png" %>
            <%= t "activerecord.models.#{@user.type}" %>
          </div>
           <div class="span3 quickinfo">
            <%= image_tag 'location.png' %>
            <%= "#{@user.state} (#{@user.country})" %>
          </div>
         <div class="span3 quickinfo">
            <%= image_tag 'languages.png' %>
            Español, Inglés
          </div>
        </div>
      </div>
    </div>

    <div id="profile-content" class="row">

      <div id="personal-description" class="span8 box">
        <%= render 'edit_link', user: @user %>
        <h3><%= t '.description' %></h3>
        <p><%= @user.description %></p>
      </div>

      <% if @user.type == 'Host' %>
      <div id="offers" class="span8 box">
        <%= render 'edit_link', user: @user %>
        <h3><%= t '.available' %></h3>
        <div>
          <% if @user.offers.empty? %>
            <%= t('.no_offers') %>
          <% else %>
            <%= render (@user.offers) %>
          <% end %>
        </div>
      </div>
      <% end %>

      <%= render partial: 'feedbacks/feedbacks', object: @feedback_pairs %>

    </div>

  </div> <!-- span8 -->

</div> <!-- end row -->
