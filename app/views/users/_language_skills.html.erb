<div class="control-group span10">
  <label class="control-label">
    <%= t('.title') %>
  </label>
  <div class="controls">
    <div id="language-selection">
      <%= f.simple_fields_for :language_skills, wrapper: false %>
    </div>
    <div id="language-add">
      <%= f.link_to_add t('.add_language'),
            :language_skills, data: { target: '#language-selection' } %>
    </div>
  </div>
</div>
