<% provide(:title, 'New volunteering opportunity') %>

<%= simple_form_for [current_user, @offer] do |f| %>

  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :accomodation %>
  <%= f.input :start_date, as: :date %>
  <%= f.input :end_date, as: :date %>
  <%= f.input :vacancies, collection: 1..5 %>
  <%= f.input :min_stay, collection: 1..5 %>
  <%= f.input :hours_per_day, collection: 1..4 %>
  <%= f.input :days_per_week, collection: 1..5 %>
  <%= f.association :work_types, as: :check_boxes %>

  <%= f.error :base %>
  <%= f.submit class: "btn btn-large btn-primary" %>
<% end %>
