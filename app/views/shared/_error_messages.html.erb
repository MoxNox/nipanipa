<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert_error">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
    <% object.errors.messages.each do |attribute| %>
    <%   attribute[1].each do |msg| %>
      <li>* <%= msg %></li>
    <%   end %>
    <% end %>
    </ul>
  </div>
<% end %>
