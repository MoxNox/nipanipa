<div class="row message">
  <div class="span1 message-from">
    <%= avatar_for message.from, style: :thumb_message %>
  </div>
  <div class="span7 message-content">
    <div class="bubble-triangle">
    </div>
    <p>
    <%= simple_format(message.body) %>
    </p>
    <p class="message-date">
    <%= l message.created_at %>
    </p>
  </div>
</div>
