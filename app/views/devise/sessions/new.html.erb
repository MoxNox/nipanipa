<% provide :title, t('sessions.signin') %>
<h1><%= t 'sessions.signin' %></h1>

<%= simple_form_for resource, url: user_session_path do |f| %>
  <div class="form-inputs">
    <%= f.input :email   , :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, as: :boolean,
                              inline_label: t('sessions.rememberme'),
                              label: false %>
    <%= f.button :submit, t('sessions.signin'), class: "signup-button" %>
  </div>
<% end %>

<div class="forgot-your-pwd">
  <%= link_to t('sessions.forgot_your_pwd?'),
                new_password_path(resource_name) %>
</div>
