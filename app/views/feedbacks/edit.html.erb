<% provide(:title, 'Edit Feedback') %>

<%= form_for [@user, @feedback], url: user_feedback_path(@user, @feedback) do |f| %>

<% if false %>
  <%= render 'shared/error_messages', object: @feedback %>
<% end %>

  <div class="field">
    <%= f.select :score, [ ['Negative', -1], ['Neutral', 0], ['Positive', 1] ]  %>
  </div>

  <div class="field">
    <%= f.text_area :content, placeholder: "Write a new feedback...", cols: 30 %>
  </div>

  <%= f.submit "Leave feedback", class: "btn btn-large btn-primary" %>
<% end %>
