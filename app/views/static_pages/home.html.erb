<div class="center hero-unit">
</div>

<ul class="thumbnails">
   <li class="span4">
    <%= link_to users_path do %>
    <div class="thumbnail home-thumbnail">
      <%= image_tag "explore.png", alt: "contribute" %>
      <h3><%= t('static_pages.home.explore') %></h3>
      <p><%= t('static_pages.home.explore_desc') %></p>
    </div>
    <% end %>
  </li>
  <li class="span4">
    <ul class="thumbnails">
      <li class="span4">
      <%= link_to new_user_registration_path(type: "host") do %>
      <div class="thumbnail home-half-thumbnail">
        <h4><%= t('static_pages.home.host') %></h4>
        <%= image_tag "host.png", alt: "signup host" %>
        <p><%= t('static_pages.home.host_desc') %></p>
      </div>
      <% end %>
      </li>
      <li class="span4">
      <%= link_to new_user_registration_path(type: "volunteer") do %>
      <div class="thumbnail home-half-thumbnail">
        <h4><%= t('static_pages.home.volunteer') %></h4>
        <%= image_tag "volunteer.png", alt: "signup volunteer" %>
        <p><%= t('static_pages.home.volunteer_desc') %></p>
      </div>
      <% end %>
      </li>
    </ul>
  </li>

  <li class="span4">
    <%= render 'shared/signin_thumbnail' %>
  </li>

</ul>
